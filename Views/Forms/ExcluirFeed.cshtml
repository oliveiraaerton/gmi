@{
    Layout = "~/Layout/Layout.cshtml";
    string chave = (string) Session["user"];
    Feed f = (Feed) Session["Feed"];
}

@if(!String.IsNullOrEmpty(chave))
{
<h1> EXCLUIR FEED </h1>
<form method="post" action="@Href("~/Views/Acts/ExcluirFeed.cshtml")">
    <div class="form-row">
        <div class="col-md-2">
            <div class="md-form form-group">
              <input type="number" class="form-control" min=1 name="inputID" id="inputID" value="@f.ID" hidden>
                <input type="number" class="form-control" min=1 name="inputOrdem" id="inputOrdem" value="@f.Ordem" required>
                <label for="inputOrdem">Ordem </label>
            </div>
        </div>
        <div class="col-md-8">
            <div class="md-form form-group">
                <input type="text" class="form-control" id="inputTitulo" name="inputTitulo" value="@f.Titulo" required>
                <label for="inputTitulo">Título </label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="md-form form-group">
                <textarea class="form-control" rows="5" maxlength="255"  id="inputNoticia" name="inputNoticia" required>@f.Noticia</textarea>
                <label for="inputNoticia">Notícia (máx. 255 caracteres)</label>
            </div>
        </div>
        <div class="col-md-2">
            <div class="md-form form-group">
                <select class="form-control" id="inputAtivo" name="inputAtivo" value="@f.Ativo">
                    <option value="0" @if(f.Ativo==0) {<text> selected </text>} >Inativo</option>
                    <option value="1" @if(f.Ativo==1) {<text> selected </text>} >Ativo</option>
                </select>
                <label for="inputAtivo">Ativo </label>
            </div>
        </div>
        <div class="col-md-2">
            <div class="md-form form-group">
                <input type="number" min=1 max=3 class="form-control" id="inputVelocidade" name="inputVelocidade" value="@f.Velocidade">
                <label for="inputVelocidade">Velocidade </label>
            </div>
        </div>
    </div>  
    <button type="submit" class="btn btn-primary btn-md">Salvar</button>
    <a href="@Href("~/Views/Menus/Feed.cshtml")" class="btn btn-warning" role="button">Cancelar</a>
</form>
}