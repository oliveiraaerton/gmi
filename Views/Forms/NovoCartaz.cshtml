@{
    Layout = "~/Layout/Layout.cshtml";
    string chave = (string) Session["user"];
}

@if(!String.IsNullOrEmpty(chave))
{
<h1> CADASTRO DE CARTAZ </h1>
<form method="post" action="@Href("~/Views/Acts/SalvarEmpresa.cshtml")">
    <div class="form-row">
        <div class="col-md-6">
            <div class="md-form form-group">
                <input type="text" class="form-control" name="inputCabecalho" id="inputCabecalho" placeholder="Cabeçalho">
                <label for="inputCabecalho">Cabeçalho</label>
            </div>
        </div>
        <div class="col-md-3">
            <div class="md-form form-group">
                <input type="text" class="form-control" id="inputFonteCabecalho" name="inputFonteCabecalho" placeholder="Fonte do Cabeçalho">
                <label for="inputFonteCabecalho">Fonte do Cabeçalho</label>
            </div>
        </div>
        <div class="col-md-3">
            <div class="md-form form-group">
                <input type="number" class="form-control" id="inputTamanhoCabecalho" name="inputTamanhoCabecalho" placeholder="Tamanho do Cabeçalho">
                <label for="inputTamanhoCabecalho">Tamanho do Cabeçalho</label>
            </div>
        </div>
    </div>  
    <button type="submit" class="btn btn-primary btn-md">Salvar</button>
</form>
}