@{
    Layout = "~/Layout/Layout.cshtml";
    string chave = (string) Session["user"];
}

@if(!String.IsNullOrEmpty(chave))
{
<h1> CADASTRO DE IMAGEM </h1>
<form method="post" action="@Href("~/Views/Acts/SalvarImagem.cshtml")">
    <div class="form-row">
        <div class="col-md-12">
            <div class="md-form form-group">
                <input type="text" class="form-control" min=1 name="inputEndereco" id="inputEndereco"  required>
                <label for="inputEndereco">Endere√ßo </label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="md-form form-group">
                <input type="number" class="form-control" min=1 name="inputLargura" id="inputLargura"  required>
                <label for="inputLargura">Largura</label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="md-form form-group">
                <input type="number" class="form-control" min=1 name="inputAltura" id="inputAltura"  required>
                <label for="inputAltura">Altura</label>
            </div>
        </div>
    </div>  
    <button type="submit" class="btn btn-primary btn-md">Salvar</button>
